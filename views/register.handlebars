<link rel="stylesheet" href="/css/login.css"/>

<h2 class="page-header">Register</h2>
{{#if errors}}
      {{#each errors}}
        <div class="alert alert-danger">{{msg}}</div>
      {{/each}}
{{/if}}
<form method="post" action="/register">
  <div class="form-group">
    <label>Navn</label>
    <input type="text" class="form-control" placeholder="Fx. Anders Andersen..." name="username">
  </div>
  <div class="form-group">
    <label>Kodeord</label>
    <input type="password" class="form-control" placeholder="Brug en stærk adgangskode" name="password">
  </div>
  <div class="form-group">
    <label>Bekræft kodeord</label>
    <input type="password" class="form-control" placeholder="Skriv adgangskoden igen" name="password2">
  </div>
  <button type="submit" class="btn btn-default">Opret</button>
</form>